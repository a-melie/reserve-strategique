{{ form_start(form) }}
<div class="row">
    <div class="col-sm-6">
        <div class="form-group row">
            <div class="col-sm-4 col-form-label text-left">
                {{ form_label(form.name) }}
            </div>
            <div class="col-sm-8">
                {{ form_widget(form.name) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4 col-form-label text-left">
                {{ form_label(form.brand) }}
            </div>

            <div class="col-sm-8">
                {{ form_widget(form.brand) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4 col-form-label text-left">
                {{ form_label(form.size) }}
            </div>
            <div class="col-sm-8">
                {{ form_widget(form.size) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4 col-form-label text-left" title="si idoine">
                {{ form_label(form.color) }}
            </div>
            <div class="col-sm-8">
                {{ form_widget(form.color) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4 col-form-label text-left">
                {{ form_label(form.category) }}
            </div>
            <div class="col-sm-8 ">
                {{ form_widget(form.category) }}
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <button class="btn btn-lg btn-secondary text-success mt-5">{{ button_label|default('Valider') }} <i class="far fa-paper-plane"></i></button>
    </div>
</div>
{{ form_end(form) }}
