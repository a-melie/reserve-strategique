{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <h1 class="m5">Editer mon profil</h1>
    {{ form_start(form) }}
    <div class="row mt-5">
        <div class="col-sm-6">
            <div class="form-group row">
                <div class="col-sm-4 col-form-label">
                    {{ form_label(form.username) }}
                </div>

                <div class="col-sm-8">
                    {{ form_widget(form.username) }}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4 col-form-label">
                    {{ form_label(form.email) }}
                </div>
                <div class="col-sm-8">
                    {{ form_widget(form.email) }}
                </div>
            </div>
        </div>
        <div class="col-sm-6">

            <button type="submit" class="btn btn-lg btn-secondary text-success mt-3">
                Valider
                <i class="far fa-paper-plane"></i>
            </button>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}
